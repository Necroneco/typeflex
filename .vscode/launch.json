    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run project",
            "args": ["./src/main.ts"],
            "runtimeArgs": [
                "--nolazy", "-r", "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}